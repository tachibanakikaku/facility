= form_for @room, html: { class: "form-horizontal", role: "form" } do |f|
  - if @room.errors.any?
    #error_explanation
      %h2= "#{pluralize(@room.errors.count, "error")} prohibited this room from being saved:"
      %ul
        - @room.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    .col-xs-2.control-label
      = f.label :name
    .col-md-4
      = f.text_field :name, autofocus: true, class: "form-control", placeholder: "1st Conference Room"
  .form-group
    .col-xs-2.control-label
      = f.label :shop_id
    .col-md-4
      = f.select :shop_id, options_from_collection_for_select(@shops, :id, :name, @room.shop_id), multiple: true, class: "form-control"
  .form-group
    .col-md-2.col-md-offset-1.control-label.actions
      = f.submit t(:save)
