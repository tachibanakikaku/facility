= form_for @room do |f|
  - if @room.errors.any?
    #error_explanation
      %h2= "#{pluralize(@room.errors.count, "error")} prohibited this room from being saved:"
      %ul
        - @room.errors.full_messages.each do |msg|
          %li= msg
  .row
    .col-xs-6.col-md-4
      = f.label :name
      = f.text_field :name, autofocus: true, class: "form-control", placeholder: "1st Conference Room"
  .actions
    = f.submit t(:save)
