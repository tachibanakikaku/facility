%h2= "Sign in"
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .row
    .col-xs-6.col-md-4
      = f.label :email
      = f.email_field :email, autofocus: true, class: "form-control", placeholder: "xxx@example.com"
  .row
    .col-xs-6.col-md-4
      = f.label :password
      = f.password_field :password, class: "form-control"
  - if devise_mapping.rememberable?
    .row
      .col-xs-6.col-md-4
        = f.check_box :remember_me
        = f.label :remember_me
  .row
    .col-xs-6.col-md-4
      = f.submit "Sign in"
  .row
    .col-xs-6.col-md-4
      = render "devise/shared/links"
